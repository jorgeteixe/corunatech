---
import { Image } from 'astro:assets'
import corunaTechLogo from '../assets/logo.png'
import ThemeToggle from './ThemeToggle.astro'
import '../styles/components/Header.css'
---

<header class="header">
  <nav class="header-nav">
    <a href="#comunidades" class="header-nav-link"> Comunidades </a>
    <a href="#eventos" class="header-nav-link"> Eventos </a>
  </nav>
  <a href="/" aria-current="page" aria-label="home" class="header-logo-link">
    <Image
      src={corunaTechLogo}
      alt="Coruna Tech Logo"
      height={100}
      class="header-logo"
    />
  </a>
  <div class="header-right">
    <nav class="header-right-nav">
      <a href="/acerca-de" class="header-nav-link"> Acerca de </a>
    </nav>
    <div class="header-theme-toggle">
      <ThemeToggle />
    </div>
  </div>
</header>
