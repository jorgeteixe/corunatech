---
import { Image } from 'astro:assets'
import corunaTechLogo from '../assets/logo.png'
import ThemeToggle from './ThemeToggle.astro'
import ClearStickersButton from './ClearStickersButton.astro'
import '../styles/components/Header.css'
---

<header class="header">
  <nav class="header-nav">
    <a href="#comunidades" class="header-nav-link"> Comunidades </a>
    <a href="#eventos" class="header-nav-link"> Eventos </a>
  </nav>
  <a
    href="/corunatech"
    aria-current="page"
    aria-label="home"
    class="header-logo-link"
  >
    <Image
      src={corunaTechLogo}
      alt="Coruna Tech Logo"
      height={150}
      class="header-logo"
    />
  </a>
  <div class="header-right">
    <div class="header-theme-toggle">
      <ThemeToggle />
    </div>
    <ClearStickersButton />
  </div>
</header>
