---
import '../styles/components/SocialNetworks.css'
---

<section class="social-networks-section">
  <div class="social-networks-content">
    <div class="social-networks-text">
      <h2 class="social-networks-title">
        Mantente ao día de todas as comunidades tech da Coruña
      </h2>
      <p class="social-networks-handle">@corunatech</p>
      <div class="social-networks-buttons">
        <a
          href="https://x.com/corunadev"
          target="_blank"
          rel="noopener noreferrer"
          class="social-button x"
        >
          Síguenos en X
        </a>
      </div>
    </div>
    <div class="social-networks-images">
      <div class="social-networks-image large-image">
        <div class="image-placeholder orange">
          <span class="placeholder-text">Imagen principal</span>
        </div>
      </div>
      <div class="social-networks-image small-image">
        <div class="image-placeholder blue">
          <span class="placeholder-text">Imagen secundaria</span>
        </div>
      </div>
    </div>
  </div>
</section>
