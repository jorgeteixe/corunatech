const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('gl', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  }).format(date);
};

const formatTime = (date: Date) => {
  return new Intl.DateTimeFormat('gl', {
    hour: '2-digit',
    minute: '2-digit',
  }).format(date);
};
