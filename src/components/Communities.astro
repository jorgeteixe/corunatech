---
import { getCollection } from 'astro:content'
import CommunitySimpleCard from './CommunitySimpleCard.astro'
import '../styles/components/Communities.css'

const communities = await getCollection('communities')
---

<section class="communities-section" id="comunidades">
  <div class="communities-container">
    <div class="communities-header">
      <h2 class="communities-title">Comunidades Tecnolóxicas da Coruña</h2>
      <p class="communities-subtitle">
        Descubre e conéctate coas comunidades tech locais.
      </p>
    </div>

    <div class="communities-grid">
      {
        communities.map(community => (
          <CommunitySimpleCard community={community} />
        ))
      }
    </div>

    {
      communities.length === 0 && (
        <div class="communities-empty">
          <p class="communities-empty-text">
            Non se atoparon comunidades. Pronto engadiremos máis!
          </p>
        </div>
      )
    }
  </div>
</section>
