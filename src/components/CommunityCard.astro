---
export interface Props {
  name: string;
  description: string;
  logo?: string;
  tags: string[];
  technologies?: string[];
}

const { name, description, logo, tags, technologies } = Astro.props;
---

<div
  class="bg-zinc-800 rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow border border-zinc-700"
>
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-center gap-3">
      {
        logo && (
          <img
            src={logo}
            alt={`${name} logo`}
            class="w-12 h-12 rounded-lg object-contain"
          />
        )
      }
      <div>
        <h3 class="text-xl font-semibold text-white">{name}</h3>
      </div>
    </div>
  </div>

  <p class="text-gray-300 mb-4 line-clamp-3">{description}</p>

  <div class="flex flex-wrap gap-2 mb-4">
    {
      tags.map((tag) => (
        <span class="px-2 py-1 bg-blue-900 text-blue-200 text-xs rounded-full">
          {tag}
        </span>
      ))
    }
  </div>

  {
    technologies && technologies.length > 0 && (
      <div class="mb-4">
        <h4 class="text-sm font-medium text-gray-300 mb-2">Tecnolox√≠as:</h4>
        <div class="flex flex-wrap gap-1">
          {technologies.map((tech) => (
            <span class="px-2 py-1 bg-zinc-700 text-gray-200 text-xs rounded">
              {tech}
            </span>
          ))}
        </div>
      </div>
    )
  }
</div>
